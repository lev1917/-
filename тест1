__author__ = 'student'
import unittest
import lib
class LibTest(unittest.TestCase):
    def test_even_for_chet(self):
        self.assertTrue(lib.even(-6))
        self.assertTrue(lib.even(-4))
        self.assertTrue(lib.even(-2))
        self.assertTrue(lib.even(0))
        self.assertTrue(lib.even(2))
        self.assertTrue(lib.even(4))
        self.assertTrue(lib.even(6))
        self.assertTrue(lib.even(8))
        self.assertTrue(lib.even(-8))
        self.assertTrue(lib.even(10))
        self.assertTrue(lib.even(-10))

    def test_even_for_noy(self):
         self.assertFalse(lib.even(1))
         self.assertFalse(lib.even(3))
         self.assertFalse(lib.even(5))
         self.assertFalse(lib.even(-1))
         self.assertFalse(lib.even(-3))
         self.assertFalse(lib.even(-5))
         self.assertFalse(lib.even(-7))
         self.assertFalse(lib.even(7))
         self.assertFalse(lib.even(9))
         self.assertFalse(lib.even(-9))
unittest.main(verbosity=2)
